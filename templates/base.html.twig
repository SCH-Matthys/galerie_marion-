<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset("/images/favicon/favicon.ico") }}">
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> #}
        <link rel="stylesheet" href="{{ asset("/css/style.css") }}">
        <link rel="stylesheet" href="{{ asset("/css/css/all.css") }}">
    </head>
    <body>
        {% block header %}
            <header id="header">
                <nav>
                    {# <img src="{{ asset("/images/logo.png")}}" alt="logo MP Marion Page"> #}
                    <ul>
                        <li><a class="{% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}" href="{{ path("app_home") }}">Galerie</a></li>
                        {# <li><a href="{{ path("app_aquatique") }}">Aquatique</a></li>
                        <li><a href="{{ path("app_vegetal") }}">Vegetal</a></li>
                        <li><a href="{{ path("app_celestial") }}">Spacial</a></li> #}
                        <li><a href="{{ path("app_profil") }}">Profil </a></li>
                        <li><a class="{% if app.request.attributes.get('_route') == 'app_contact' %}active{% endif %}" href="{{ path("app_contact") }}">Contact</a></li>
                        {% if is_granted("ROLE_ADMIN") %}
                            <li><a href="{{ path("admin") }}">Admin</a></li>
                            <li><a href="{{ path("app_logout") }}">Se déconnecter</a></li>
                        {% endif %}
                    </ul>
                </nav>
            </header>
        {% endblock %}

        {% block main %}
            {# public/dart-sass/sass public/scss/style.scss public/css/style.css --watch #}
        {% endblock %}
        
        {% block footer %}
            <footer>
                <p>Marion Page</p>
                <a href="https://www.instagram.com/mpage.designer/"><i class="fa-brands fa-instagram"></i>mpage.designer</a>
                <a href="{{ path("app_home") }}">
                    <img src="{{ asset("/images/logos/logoWhite.png")}}" alt="logo MP Marion Page">
                    <p>Galerie</p>
                </a>
            </footer>
        {% endblock %}
    </body>
    {% block script %}
    {% endblock %}
</html>